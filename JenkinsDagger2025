pipeline {
    agent any

    stages {
        stage('Run Dagger Pipeline') {
            steps {
                script { // Use python3 -m pip for better compatibility
                    sh 'python3 -m pip install --upgrade pip'

                    sh 'pip install dagger-io' // Ensure Dagger is installed
                    sh 'python3 dagger_pipeline.py'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline execution completed."
        }
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline execution failed!"
        }
    }
}
