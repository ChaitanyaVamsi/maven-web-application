pipeline {
    agent any

    environment {
        DAGGER_BIN_PATH = "/var/lib/jenkins/.dagger/bin"  // Change path if needed
    }

    stages {
        stage('Install Dagger') {
            steps {
                script {
                    // Install Dagger using the installation script
                    sh '''#!/bin/bash
                    curl -fsSL https://dl.dagger.io/dagger/install.sh | bash
                    export PATH=$PATH:/root/.dagger/bin  # Ensure Dagger is available in PATH
                    '''
                     // Verify if Dagger was installed correctly
                      sh 'echo $PATH'
                    // Check if Dagger was installed successfully
                    sh 'dagger version'  // Should print the Dagger version if installation was successful
                }
            }
        }

        stage('Git Checkout') {
            steps {
                script {
                    // Run the Dagger command for Git Checkout
                    sh 'dagger run gitCheckout'
                }
            }
        }

        stage('Build Maven Project') {
            steps {
                script {
                    // Run the Dagger command for Maven build
                    sh 'dagger run mavenBuild'
                }
            }
        }

        // Additional stages like SonarQube scan, Nexus deploy, etc. go here...
    }

    post {
        always {
            echo "Pipeline finished, cleaning up."
        }
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
